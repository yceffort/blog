{
  "name": "yceffort-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "yceffort blog and research monorepo",
  "repository": {
    "url": "https://github.com/yceffort/yceffort-blog-v2",
    "type": "git"
  },
  "license": "MIT",
  "author": "yceffort <root@yceffort.kr>",
  "type": "module",
  "scripts": {
    "dev": "pnpm --parallel -r dev",
    "dev:blog": "pnpm --filter blog dev",
    "dev:research": "pnpm --filter research dev",
    "build": "pnpm -r build",
    "build:blog": "pnpm --filter blog build",
    "build:research": "pnpm --filter research build",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "prettier": "pnpm -r prettier",
    "prettier:fix": "pnpm -r prettier:fix"
  },
  "devDependencies": {
    "@naverpay/commit-helper": "^1.2.0",
    "lefthook": "^2.0.11",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.6.5",
  "engines": {
    "node": "24.12.0",
    "pnpm": "10.6.5"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "lefthook"
    ],
    "overrides": {
      "form-data": ">=3.0.4",
      "micromatch": ">=4.0.8",
      "front-matter>js-yaml": "^3.14.2",
      "js-yaml@^4": ">=4.1.1",
      "@eslint/plugin-kit": ">=0.3.4",
      "mdast-util-to-hast": ">=13.2.1",
      "markdown-it-mermaid>mermaid": "^11.12.2",
      "@marp-team/marpit>js-yaml": "^4.1.1",
      "brace-expansion@>=1.0.0 <1.1.12": "^1.1.12",
      "brace-expansion@>=2.0.0 <2.0.2": "^2.0.2",
      "lodash.trim": "npm:lodash@^4.17.21"
    }
  }
}
