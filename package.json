{
  "version": "1.0.0",
  "name": "yceffort-blog",
  "description": "yceffort-blog",
  "scripts": {
    "dev": "next dev",
    "sitemap": "ts-node --project tsconfig.node.json ./src/utils/siteMap.ts",
    "images": "ts-node --project tsconfig.node.json ./src/utils/imageInfo.ts",
    "build-next": "next build",
    "build": "npm run sitemap && npm run images && npm run build-next",
    "start": "next start",
    "lint": "eslint '**/*.{ts,tsx}'",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier '**/*.{json,md,yaml}' --check",
    "prettier:fix": "prettier '**/*.{json,md,yaml}' --write",
    "pre-commit": "lint-staged"
  },
  "repository": "https://github.com/yceffort/yceffort-blog-v2",
  "author": "yceffort <root@yceffort.kr>",
  "license": "MIT",
  "keywords": [
    "react",
    "nextjs",
    "blog"
  ],
  "dependencies": {
    "@mapbox/rehype-prism": "^0.6.0",
    "@tailwindcss/forms": "^0.3.2",
    "@tailwindcss/typography": "^0.4.0",
    "date-fns": "^2.23.0",
    "front-matter": "^4.0.2",
    "glob": "^7.1.6",
    "image-size": "^0.9.7",
    "memoizee": "^0.4.14",
    "next": "^12.0.1",
    "next-mdx-remote": "^3.0.4",
    "next-pwa": "^5.3.1",
    "next-seo": "^4.23.0",
    "next-themes": "0.0.15",
    "prismjs": "^1.25.0",
    "query-string": "^7.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "4.2.0",
    "react-is": "^17.0.2",
    "rehype-katex": "^5.0.0",
    "remark-math": "^3.0.0",
    "remark-prism": "^1.3.5",
    "remark-slug": "^6.0.0",
    "remark-toc": "^7.2.0",
    "tailwindcss": "^2.2.8",
    "unist-util-visit": "^2.0.3"
  },
  "devDependencies": {
    "@tailwindcss/jit": "^0.1.18",
    "@types/date-fns": "^2.6.0",
    "@types/memoizee": "^0.4.5",
    "@types/node": "^14.17.12",
    "@types/react": "^17.0.19",
    "autoprefixer": "^10.3.3",
    "eslint-config-next": "^11.1.0",
    "eslint-config-yceffort": "2.0.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "postcss": "^8.3.6",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2",
    "webpack": "^5.51.1"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint",
      "git add"
    ],
    "**/*.{json,yaml,md}": [
      "prettier",
      "git add"
    ]
  }
}
