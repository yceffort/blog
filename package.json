{
  "version": "0.0.1",
  "name": "yceffort-blog",
  "description": "yceffort-blog",
  "scripts": {
    "dev": "next dev",
    "sitemap": "ts-node --project ./tsconfig.node.json ./src/SiteMap.ts",
    "images": "ts-node --project ./tsconfig.node.json ./src/imageInfo.ts",
    "build-nextjs": "next build",
    "build": "npm run sitemap && npm run images && npm run build-nextjs",
    "start": "next start",
    "lint": "eslint '**/*.{ts,tsx}'",
    "lint:fix": "npm run lint --fix",
    "prettier": "prettier '**/*.{json,md,yaml}' --check",
    "prettier:fix": "prettier '**/*.{json,md,yaml}' --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged -q"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "npm run prettier:fix",
      "npm run lint:fix",
      "git add"
    ]
  },
  "repository": "https://github.com/yceffort/yceffort-blog-v2",
  "author": "yceffort <yceffort@gmail.com>",
  "license": "MIT",
  "keywords": [
    "react",
    "nextjs",
    "blog"
  ],
  "dependencies": {
    "@mapbox/rehype-prism": "^0.6.0",
    "@tailwindcss/forms": "^0.3.2",
    "@tailwindcss/typography": "^0.4.0",
    "date-fns": "^2.19.0",
    "dotenv": "^8.2.0",
    "firebase-admin": "^9.5.0",
    "front-matter": "^4.0.2",
    "glob": "^7.1.6",
    "image-size": "^0.9.7",
    "isomorphic-fetch": "^3.0.0",
    "memoizee": "^0.4.14",
    "next": "^10.1.0",
    "next-mdx-remote": "^2.1.3",
    "next-pwa": "^5.0.6",
    "next-seo": "^4.23.0",
    "next-themes": "0.0.14",
    "prismjs": "^1.22.0",
    "query-string": "^6.13.7",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "rehype-katex": "^3.0.1",
    "remark-math": "^3.0.1",
    "remark-prism": "^1.3.5",
    "remark-slug": "^6.0.0",
    "remark-toc": "^7.0.0",
    "tailwindcss": "^2.1.1",
    "unist-util-visit": "^2.0.3"
  },
  "devDependencies": {
    "@svgr/webpack": "^5.5.0",
    "@tailwindcss/jit": "^0.1.18",
    "@types/date-fns": "^2.6.0",
    "@types/isomorphic-fetch": "0.0.35",
    "@types/memoizee": "^0.4.5",
    "@types/node": "^14.11.8",
    "@types/promise-fs": "^2.1.0",
    "@types/react": "^17.0.3",
    "autoprefixer": "^10.2.5",
    "eslint-config-yceffort": "0.0.5",
    "husky": "^3.0.4",
    "lint-staged": "^10.5.4",
    "postcss": "^8.2.10",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "webpack": "^5.24.4"
  }
}
